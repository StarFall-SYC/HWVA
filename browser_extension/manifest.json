{
  "manifest_version": 3,
  "name": "Humanoid Web Vulnerability Assistant",
  "version": "1.1.0",
  "description": "模拟人类行为的网站漏洞检测助手，合规实现多目标网站漏洞检测",
  "permissions": [
    "activeTab", 
    "storage", 
    "webRequest", 
    "webNavigation", 
    "scripting", 
    "declarativeNetRequest",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["fingerprint.js", "human_behavior.js", "content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "web_accessible_resources": [{
    "resources": ["*.js", "app.ico"],
    "matches": ["<all_urls>"]
  }]
}